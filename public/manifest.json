{
  "manifest_version": 3,
  "name": "Discog Search",
  "version": "0.0.0",
  "description": "A simple Chrome extension to search Discogs.",
  "action": {
    "default_popup": "index.html"
  },
  "options_page": "public/options.html",
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": ["activeTab", "scripting", "storage", "offscreen"],
  "host_permissions": ["https://generativelanguage.googleapis.com/", "https://www.google.com/", "https://www.discogs.com/"]
}
